
.msg-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.msg-line {
  width: 100%;
  border-bottom: 1rpx solid #f0f0f0;
}

.msg-items {
  width: 750rpx;
  height: 154rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.msg_lt image {
  width: 108rpx;
  height: 108rpx;
  margin: 44rpx 22rpx;
  border-radius: 50%;
}

.msg-md {
   display: block;
  width: 100%;
}

.msg_md-users {
  font-size: 32rpx;
  color: #444;
  font-weight: bold;
}

.msg_md-time, .msg_md-news {
  font-size: 28rpx;
  color: #c0c0c0;
}

.msg_md-time {
  margin-top: 10rpx;

}

.msg_md-news {
  margin-top: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
