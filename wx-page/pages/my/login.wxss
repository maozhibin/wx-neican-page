.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 5rpx #2aa515;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 40rpx;
}

.myself {
  padding: 40rpx 0 20rpx 40rpx;
  font-size: 26rpx;
  color: #d0d0d0;
  width: 80%;
}


.separateView{
  height: 100rpx;
  width: 100%;
  background: #f5f5f5;
}
.auth-list{
  padding-top: 50rpx 0 0 150rpx;
  text-align: left;
}

.auth-icon{
  padding: 10rpx 20rpx;
}

.auth-detail{
  padding: 10rpx 0;
  font-size: 36rpx;
}

.option-button{
   margin-top: 50rpx;
   background: green;
}