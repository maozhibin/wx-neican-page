/**index.wxss**/
.container{
  padding-top: 0rpx;
}

.tabs {
  height: 96rpx;
  width: 100%;
  background-color: #7B68EE;
  text-align: center;
}

.tabs .tab-label{
  font-size: 34rpx;
  color: #f0f0f0;
  padding: 30rpx 0;
  float: left;
  width: 33%;
}


.tabs .current{
  font-size: 34rpx;
  font-weight:bold;
  color: #fff;
  padding-bottom: 25rpx;
  padding-top: 25rpx;
  border-bottom: 5rpx solid #fff;
}

.banner{
  background-color: #DEB887;
  width: 100%;
  height: 270rpx;
}

.twitter{
  padding-bottom: 30rpx;
}
.twitter-avatar{
  float:left;
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx 20rpx 0 0;
}

.twitter-body{
  float:left;
  width: 560rpx;
  padding-bottom: 50rpx;
  border-bottom: 3rpx solid #d0d0d0;
}

.body-top-left{
  float:left;
  width: 160rpx;
  padding-top: 20rpx;
}

.nickName,.twitter-icon,.befor{
  float:left;
  color: #7B68EE;
  font-size:28rpx;
}

.twitter-jiang{
   float:left;
    width: 40rpx;
    height: 40rpx;
    padding-left: 20rpx;
}

.nickName{
  font-size: 32rpx;
}

.body-top{
  float:block;
}

.body-top-right{
  float: right;
  width: 160rpx;
  padding-right: 30rpx;
  text-align: center;
  height: 100%;
}

.twitter-icon{
  float:left;
  width: 50rpx;
  height: 50rpx;
  padding: 30rpx 0;
  padding-left: 30rpx;
}

.twitter-title{
  padding-top: 110rpx;
  font-weight: bold;
  font-size: 42rpx;
}

.twitter-content{
  padding-top: 15rpx;
  font-size: 36rpx;
}

.twitter-attr{
    padding-top: 15rpx;
    background-color: #A9A9A9;
    height: 150rpx;
}

.toDetail{
  float:left;
  width: 100%;
  padding-top: 15rpx;
  color:#7B68EE;
  font-size:36rpx;
}

.toDetailHover{
  color:#C0C0C0;
}

.reply-icon{
  float:right;
  width: 60rpx;
  height: 60rpx;
  padding-right: 30rpx;
}

.zan{
  float:left;
  padding-top: 20rpx;
}

.zan image{
  float:left;
  width: 40rpx;
  height: 40rpx;
}

.zan .zan-user{
  padding-left:30rpx;
  color:#7B68EE;
  font-size:32rpx;
}

.reply-list{
  padding-top: 30rpx;
  font-size:36rpx;
}

.reply-list .reply-user{
    color:#7B68EE;
    font-weight: bold;
}
